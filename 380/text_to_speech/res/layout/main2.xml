    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/headphones_down"
        android:src="@drawable/play_32x32" />

    <ImageView
        android:id="@+id/btnListItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnClear"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/btnSaved2"
        android:src="@drawable/list_32x32" />

    
