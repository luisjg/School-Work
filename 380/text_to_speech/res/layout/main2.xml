        android:id="@+id/btnDeleteList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play"
        android:layout_toLeftOf="@+id/btnSpeak2"
        android:src="@drawable/delete_list_32x32" />
